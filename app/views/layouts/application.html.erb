<!DOCTYPE html>
<html>
  <head>
    <title>Intern</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", type: "module" %>

    <!-- app/views/layouts/application.html.erb -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Xin chào, #{current_user.email}", "#", class: "nav-link" %>
          </li>
                    <li class="nav-item">
        <%= button_to "Hồ sơ người dùng, #{current_user.id}", profile_path(current_user.id),method: :get, class: "nav-link" %>
          </li>
          <li class="nav-item">
        <%= button_to "Đăng Xuất", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            🔔 Thông báo (<%= current_user.notifications.where(status: false).count %>)
          </button>
          <ul class="dropdown-menu">
        <% current_user.notifications.order(created_at: :desc).each do |notification| %>
      <li class="<%= notification.status ? 'text-muted' : 'bg-warning fw-bold' %>">
              <%= link_to notification.message, "#", class: "dropdown-item", data: { notification_id: notification.id } %>
          </li>
        <% end %>
      </ul>
    </div>


        <% else %>
          <li class="nav-item">
            <%= link_to "Đăng Nhập", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Đăng Ký", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
    <%= yield %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </body>
</html>

<script>
  
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".dropdown-item").forEach(item => {
      item.addEventListener("click", function () {
        let notificationId = this.dataset.notificationId;
        console.log (this.dataset.notificationId )
         fetch(`/users/notifications/${notificationId}/mark_as_read`, {
            method: "POST",
            headers: {
              "X-CSRF-Token": document.querySelector('meta[name="csrf-token"]').content,
              "Content-Type": "application/json"
            },
          })
        this.classList.remove("bg-warning fw-bold");
      });
    });
  });

</script>
