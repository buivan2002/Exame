                <%= link_to "ƒêƒÉng Nh·∫≠p", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ƒêƒÉng K√Ω", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>



 
    <!-- Search Bar -->
    <div class="container mt-3">
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-8 mx-auto">
            <form id="search-form" action="/users/search/detail" method="GET" class="d-flex">
              <input type="text" id="query" name="query" class="form-control me-2" placeholder="Nh·∫≠p t√™n ho·∫∑c email...">
              <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> T√¨m ki·∫øm</button>
            </form>
          </div>
           <div id="search-results"> 
          </div>
        </div>
      <% end %>
    </div>

    
    <!-- N·ªôi dung trang -->
    <div class="container mt-4">
      <%= yield %>
    </div>

    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </body>
</html>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const input = document.getElementById("query");
    const resultsDiv = document.getElementById("search-results");
    const userId = JSON.parse('<%= current_user&.id.to_json || 'null' %>');
    let timeout = null;

    input.addEventListener("input", function () {
      clearTimeout(timeout);
      const query = input.value.trim();
      console.log (userId)
      console.log(query)
      if (query === "") {
        resultsDiv.innerHTML = "<p>Nh·∫≠p t·ª´ kh√≥a ƒë·ªÉ t√¨m ki·∫øm ng∆∞·ªùi d√πng...</p>";
        return;
      }

      timeout = setTimeout(() => {
        fetch(`/users/${userId}/search?query=${query}`, {
            method: "GET",
            headers: {
              "X-CSRF-Token": document.querySelector('meta[name="csrf-token"]').content,
              "Content-Type": "application/json"
            },
          })
          .then(response => response.json())
          .then(users => {
          if (users.length === 0) {
            resultsDiv.innerHTML = `
              <div class="alert alert-warning text-center w-100" role="alert">
                Kh√¥ng t√¨m th·∫•y ng∆∞·ªùi d√πng n√†o.
              </div>`;
            return;
          }

          resultsDiv.innerHTML = `
            <div class="row justify-content-center">
              <div class="col-md-8"> 
                <div class="row row-cols-1 row-cols-md-2 g-3"> 
                  ${users.slice(0, 6).map(user => `
                    <div class="col"> 
                      <div class="card shadow-sm border-0 h-80">
                        <div class="card-body">
                          <h5 class="card-title">${user.name}</h5>
                          <p class="card-text">
                            <strong>Email:</strong> ${user.email}<br>
                            <br>
                            <strong>üïí Last login:</strong> ${new Date(user.last_login_at).toLocaleString()}
                            <br>
                            <strong>üë• Followers:</strong> ${user.followers_count}
                          </p>
                        </div>
                      </div>
                    </div>
                  `).join("")}
                </div>
              </div>
            </div>`;
        })



          .catch(error => {
            console.error("L·ªói:", error);
            resultsDiv.innerHTML = "<p>ƒê√£ x·∫£y ra l·ªói khi t√¨m ki·∫øm.</p>";
          });
      }, 300); // Debounce: Ch·ªù 300ms sau khi g√µ m·ªõi g·ª≠i request
    });
  })

  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".dropdown-item").forEach(item => {
      item.addEventListener("click", function () {
        let notificationId = this.dataset.notificationId;
        console.log (this.dataset.notificationId )
         fetch(`/users/notifications/${notificationId}/mark_as_read`, {
            method: "POST",
            headers: {
              "X-CSRF-Token": document.querySelector('meta[name="csrf-token"]').content,
              "Content-Type": "application/json"
            },
          })
        this.classList.remove("bg-warning fw-bold");
      });
    });
  });

</script>
