<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body">
          <h2 class="text-center mb-4">Đăng Nhập</h2>

          <%= form_with scope: :user, url: session_path(:user), method: :post, class: "needs-validation" do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>

            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Đăng Nhập", class: "btn btn-primary btn-block" %>
            </div>

          <% end %>
            <div class="d-grid gap-2">

          <%= link_to 'Login with Google', user_google_oauth2_omniauth_authorize_path, data: { turbo_method: :post, turbo: 'false' } %> <br />
            </div>

          <div class="mt-3 text-center">
            <%= link_to "Quên mật khẩu?", new_password_path(:user), class: "text-decoration-none" %> |
            <%= link_to "Đăng ký", new_registration_path(:user), class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
