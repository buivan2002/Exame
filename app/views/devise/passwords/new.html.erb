<h2 class="text-center mb-4">Quên mật khẩu?</h2>

<div class="card shadow-sm p-4">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, "Nhập email của bạn", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Nhập email..." %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Gửi hướng dẫn đặt lại mật khẩu", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>
