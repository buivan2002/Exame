<div class="container mt-4">
  <h2 class="mb-3"><i class="fas fa-plus-circle me-2"></i>Thêm chủ đề mới</h2>

  <%= form_with(model: [:admin, @category], local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Tên chủ đề", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Mô tả", class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :status, "Trạng thái", class: "form-label" %>
      <%= f.select :status, [["Hoạt động", true], ["Không hoạt động", false]], {}, class: "form-select" %>
    </div>


    <div class="mt-3">
      <%= f.submit "Tạo chủ đề", class: "btn btn-success me-2" %>
      <%= link_to "Quay lại", admin_categories_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
