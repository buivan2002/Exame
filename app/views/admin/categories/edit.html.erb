<!-- app/views/admin/categories/edit.html.erb -->
<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>Chỉnh sửa Chủ đề</h3>
    </div>
    <div class="card-body">
      <%= form_with(model: @category, url: admin_category_path(@category), local: true, method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label :name, "Tên chủ đề" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Nhập tên chủ đề" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Mô tả" %>
          <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Nhập mô tả chủ đề" %>
        </div>

        <div class="form-group">
          <%= f.label :status, "Trạng thái" %>
          <%= f.select :status,
                options_for_select([["Hiện", "hiện"], ["Ẩn", "ẩn"]], @category.status),
                {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Cập nhật", class: "btn btn-primary" %>
          <%= link_to "Hủy bỏ", admin_categories_path, class: "btn btn-secondary ml-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
