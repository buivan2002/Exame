<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5><i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin người dùng</h5>
      <%= link_to "Quay lại", admin_users_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <div class="card-body">
      <%= form_with model: [:admin, @user], local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Tên người dùng", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :phone, "Số điện thoại", class: "form-label" %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :role, "Vai trò", class: "form-label" %>
          <%= f.select :role, ["user", "admin"], {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :avatar_url, "Avatar URL", class: "form-label" %>
          <%= f.text_field :avatar_url, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Cập nhật", class: "btn btn-primary" %>
          <%= link_to "Hủy", admin_users_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
