<!-- app/views/admin/users/index.html.erb -->
<div class="container-fluid p-0">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý Users</h2>
    <%= link_to new_admin_user_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus"></i> Thêm mới user
    <% end %>
  </div>

  <!-- Search and filter bar -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên, email..." id="searchInput">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
          <select class="form-control w-auto mr-2" id="statusFilter">
            <option value="all">Tất cả trạng thái</option>
            <option value="active">Đang hoạt động</option>
            <option value="inactive">Không hoạt động</option>
          </select>
          <select class="form-control w-auto" id="sortBy">
            <option value="newest">Mới nhất</option>
            <option value="oldest">Cũ nhất</option>
            <option value="name">Theo tên</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Users table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>#</th>
              <th>Tên</th>
              <th>Email</th>
              <th>Ngày tạo</th>
              <th>Lần đăng nhập cuối</th>
              <th>Trạng thái</th>
              <th>Bài test đã làm</th>
              <th>Điểm cao nhất</th>
              <th class="text-center">Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar avatar-sm mr-2 <%= user.role == 'user' ? 'bg-primary' : 'bg-danger' %> text-white rounded-circle text-center">
                      <%= user.name.split.map { |n| n.first }.join.upcase %>
                    </div>
                    <div><%= user.name %></div>
                  </div>
                </td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                <td>
                  <% if user.last_login_at.present? %>
                    <%= user.last_login_at.strftime("%d/%m/%Y %H:%M") %>
                  <% else %>
                    Chưa đăng nhập
                  <% end %>
                </td>
                <td>
                  <% if user.role == "user" %>
                    <span class="badge badge-primary">Đang hoạt động</span>
                  <% else %>
                    <span class="badge badge-danger">Không hoạt động</span>
                  <% end %>
                </td>
                <td><%= user.quiz_results.count %></td>
                <td><%= 0 %></td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to admin_user_path(user), class: "btn btn-sm btn-info", data: { toggle: "tooltip" }, title: "Xem chi tiết" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-warning", data: { toggle: "tooltip" }, title: "Chỉnh sửa" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= button_to admin_user_path(user), method: :delete, data: { confirm: "Bạn có chắc chắn muốn xóa?" }, class: "btn btn-sm btn-danger", data: { toggle: "tooltip" }, title: "Xóa" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                    <%# <%= link_to reset_password_admin_user_path(user), method: :post, class: "btn btn-sm btn-secondary", data: { toggle: "tooltip" }, title: "Reset mật khẩu" do %>
                      <%# <i class="fas fa-key"></i> %>
                    <%# <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination (nếu sử dụng gem phân trang) -->
      <div class="d-flex justify-content-between align-items-center mt-4">
        <div>Hiển thị <%= @users.offset_value + 1 %> - <%= [@users.offset_value + @users.limit_value, @users.total_count].min %> của <%= @users.total_count %> user</div>
        <nav>
          <%= paginate @users %>
        </nav>
      </div>
    </div>
  </div>
</div>

<!-- CSS Styles -->
<style>
  .avatar-sm {
    width: 30px;
    height: 30px;
    line-height: 30px;
    font-size: 12px;
  }

  .avatar-lg {
    width: 80px;
    height: 80px;
    line-height: 80px;
    font-size: 32px;
  }
</style>

<!-- JavaScript -->
<script>
$(document).ready(function() {
  // Enable tooltips
  $('[data-toggle="tooltip"]').tooltip();

  // View user details
  $('.btn-info').click(function() {
    $('#viewUserModal').modal('show');

    // Set up user activity chart
    var ctx = document.getElementById('userActivityChart').getContext('2d');
    var chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'CN'],
        datasets: [{
          label: 'Số bài test',
          backgroundColor: 'rgba(0, 123, 255, 0.1)',
          borderColor: 'rgba(0, 123, 255, 1)',
          data: [2, 1, 3, 0, 2, 4, 3]
        }]
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true,
              stepSize: 1
            }
          }]
        }
      }
    });
  });

  // Search functionality
  $('#searchInput').on('keyup', function() {
    var value = $(this).val().toLowerCase();
    $('tbody tr').filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });

  // Status filter
  $('#statusFilter').change(function() {
    var value = $(this).val();
    if (value === 'all') {
      $('tbody tr').show();
    } else if (value === 'active') {
      $('tbody tr').hide();
      $('tbody tr:contains("Đang hoạt động")').show();
    } else {
      $('tbody tr').hide();
      $('tbody tr:contains("Không hoạt động")').show();
    }
  });
});
</script>

