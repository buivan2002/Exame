<h1>New User</h1>

<%= form_with(model: @user, url: admin_users_path) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :role %>
    <%= f.select :role, options_for_select(["admin", "user", "editor"]), { include_blank: "Select Role" }, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :avatar_url, "Avatar URL" %>
    <%= f.text_field :avatar_url, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :oauth_provider, "OAuth Provider" %>
    <%= f.select :oauth_provider, options_for_select(["google", "facebook", "github"]), { include_blank: "Select Provider (optional)" }, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :oauth_id, "OAuth ID" %>
    <%= f.text_field :oauth_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create User", class: "btn btn-primary" %>
    <%= link_to "Back", admin_users_path, class: "btn btn-secondary" %>
  </div>
<% end %>