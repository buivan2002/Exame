<h1>New User</h1>

<%= form_with(model: @user, url: admin_users_path) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :role %>
    <%= f.select :role, options_for_select(["user"]), { include_blank: "Select Role" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create User", class: "btn btn-primary" %>
    <%= link_to "Back", admin_users_path, class: "btn btn-secondary" %>
  </div>
<% end %>
