<!-- Modal Thêm mới cấu hình level -->
<div class="modal fade" id="addLevelConfigModal" tabindex="-1" aria-labelledby="addLevelConfigModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addLevelConfigModalLabel">Thêm cấu hình level mới</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addLevelConfigForm" action="<%= admin_add_level_config_path %>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="mb-3">
            <label class="form-label">Level</label>
            <input type="number" class="form-control" name="level_config[level]" placeholder="Nhập level" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Tên level</label>
            <input type="text" class="form-control" name="level_config[name]" placeholder="Nhập tên level" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Point cần đạt</label>
            <input type="number" class="form-control" name="level_config[required_points]" placeholder="Nhập số point cần đạt" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Point thưởng mỗi quiz</label>
            <input type="number" class="form-control" name="level_config[quiz_reward]" placeholder="Nhập point thưởng mỗi quiz" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Point thưởng đăng nhập</label>
            <input type="number" class="form-control" name="level_config[login_reward]" placeholder="Nhập point thưởng đăng nhập" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select class="form-select" name="level_config[status]">
              <option value="true" selected>Kích hoạt</option>
              <option value="false">Vô hiệu hóa</option>
            </select>
          </div>
          <div class="modal-footer px-0 pb-0">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-primary">Lưu cấu hình</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Chỉnh sửa cấu hình level -->
<div class="modal fade" id="editLevelConfigModal" tabindex="-1" aria-labelledby="editLevelConfigModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editLevelConfigModalLabel">Chỉnh sửa cấu hình level</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body">
        <form id="editLevelConfigForm" action="<%= admin_update_level_config_path(@level_config) %>" method="post">
          <!-- PATCH method -->
          <input type="hidden" name="_method" value="patch">
          <!-- CSRF token -->
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <div class="mb-3">
            <label class="form-label">Level</label>
            <input type="number" class="form-control" name="level_config[level]" value="<%= @level_config.level %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Tên level</label>
            <input type="text" class="form-control" name="level_config[name]" value="<%= @level_config.name %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Point cần đạt</label>
            <input type="number" class="form-control" name="level_config[required_points]" value="<%= @level_config.required_points %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Point thưởng mỗi quiz</label>
            <input type="number" class="form-control" name="level_config[quiz_reward]" value="<%= @level_config.quiz_reward %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Point thưởng đăng nhập</label>
            <input type="number" class="form-control" name="level_config[login_reward]" value="<%= @level_config.login_reward %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select class="form-select" name="level_config[status]">
              <option value="true" <%= @level_config.status ? 'selected' : '' %>>Kích hoạt</option>
              <option value="false" <%= !@level_config.status ? 'selected' : '' %>>Vô hiệu hóa</option>
            </select>
          </div>

          <div class="modal-footer px-0 pb-0">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Thêm mã JavaScript cho quản lý point -->
<script>
document.addEventListener('DOMContentLoaded', function () {
  const editModal = document.getElementById('editLevelConfigModal');
  editModal.addEventListener('show.bs.modal', function (event) {
    const button = event.relatedTarget;

    const id = button.getAttribute('data-level-id');
    const level = button.getAttribute('data-level-level');
    const name = button.getAttribute('data-level-name');
    const required = button.getAttribute('data-level-required');
    const quiz = button.getAttribute('data-level-quiz');
    const login = button.getAttribute('data-level-login');
    const status = button.getAttribute('data-level-status');

    // Gán giá trị vào input form
    editModal.querySelector('form').action = `/admin/points/level_configs/${id}`;
    editModal.querySelector('input[name="level_config[level]"]').value = level;
    editModal.querySelector('input[name="level_config[name]"]').value = name;
    editModal.querySelector('input[name="level_config[required_points]"]').value = required;
    editModal.querySelector('input[name="level_config[quiz_reward]"]').value = quiz;
    editModal.querySelector('input[name="level_config[login_reward]"]').value = login;
    editModal.querySelector('select[name="level_config[status]"]').value = status === "true" ? "true" : "false";
    console.log('Points management UI loaded successfully');
  });
});

</script>