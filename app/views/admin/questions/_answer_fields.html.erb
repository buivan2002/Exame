<div class="nested-fields">
  <div class="field">
    <%= f.label :body, "Nội dung đáp án" %>
    <%= f.text_area :body, rows: 2 %>
  </div>

  <div class="field">
    <%= f.label :is_correct, "Đáp án đúng?" %>
    <%= f.check_box :is_correct %>
  </div>

  <div class="field">
    <%= f.label :image_url, "URL Ảnh (nếu có)" %>
    <%= f.text_field :image_url %>
  </div>

  <%= link_to_remove_association "Xóa", f, class: "btn btn-danger" %>
</div>
