<!-- app/views/admin/questions/index.html.erb -->
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý Câu hỏi</title>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css' %>
  <style>
    .badge {
      font-size: 85%;
    }
    .progress-bar {
      font-size: 10px;
      line-height: 10px;
    }
  </style>
</head>
<body>

<div class="container-fluid p-3">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Quản lý Câu hỏi</h2>
    <!-- Nút mở modal thêm câu hỏi -->
    <button class="btn btn-primary" data-toggle="modal" data-target="#addQuestionModal">
      <i class="fas fa-plus"></i> Thêm mới câu hỏi
    </button>
  </div>

  <!-- Search and filter bar -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-8">
          <!-- Form tìm kiếm (GET) -->
          <%= form_with url: admin_questions_path, method: :get, local: true, class: "w-100" do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Tìm kiếm theo nội dung câu hỏi..." %>
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-4 d-flex justify-content-end">
          <!-- Form lọc theo loại câu hỏi (GET) -->
          <%= form_with url: admin_questions_path, method: :get, local: true, class: "d-flex" do %>
            <%= select_tag :question_type,
                options_for_select([
                  ['Tất cả loại', 'all'],
                  ['Multiple Choice', 'multiple_choice'],
                  ['True/False', 'true_false'],
                  ['Essay', 'essay'],
                  ['Matching', 'matching']
                ], selected: params[:question_type]),
                class: "form-control w-auto mr-2" %>

            <button type="submit" class="btn btn-outline-secondary">Lọc</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Questions table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-light">
            <tr>
              <th>#</th>
              <th>Nội dung câu hỏi</th>
              <th>Loại</th>
              <th>Tỷ lệ trả lời đúng</th>
              <th>Ngày tạo</th>
              <th class="text-center">Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% # Vòng lặp hiển thị danh sách câu hỏi %>
            <% @questions.each_with_index do |question, index| %>
              <tr>
                <!-- Số thứ tự: index + 1 + offset_value để đúng thứ tự khi phân trang -->
                <td><%= index + 1 + @questions.offset_value %></td>

                <td><%= question.content %></td>

                <td>
                  <span class="badge badge-secondary">
                    <%= question.question_type %>
                  </span>
                </td>

                <td>
                  <% correct_rate = question.correct_rate.to_i rescue 0 %>
                  <div class="progress" style="height: 10px;">
                    <div class="progress-bar bg-success"
                         role="progressbar"
                         style="width: <%= correct_rate %>%;"
                         aria-valuenow="<%= correct_rate %>"
                         aria-valuemin="0"
                         aria-valuemax="100">
                      <%= correct_rate %>%
                    </div>
                  </div>
                </td>

                <td><%= question.created_at.strftime("%d/%m/%Y") %></td>

                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to admin_question_path(question),
                                class: "btn btn-sm btn-info",
                                data: { toggle: "tooltip" },
                                title: "Xem chi tiết" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>

                    <%= link_to edit_admin_question_path(question),
                                class: "btn btn-sm btn-warning",
                                data: { toggle: "tooltip" },
                                title: "Chỉnh sửa" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>

                    <%= link_to admin_question_path(question),
                                method: :delete,
                                data: { confirm: "Bạn có chắc chắn muốn xóa?" },
                                class: "btn btn-sm btn-danger",
                                title: "Xóa" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination (kaminari) -->
      <div class="d-flex justify-content-between align-items-center mt-4">
        <!-- Hiển thị thông tin phân trang -->
        <div>
          Hiển thị
          <%= @questions.offset_value + 1 %> -
          <%= [@questions.offset_value + @questions.limit_value, @questions.total_count].min %>
          của <%= @questions.total_count %> câu hỏi
        </div>
        <nav>
          <%= paginate @questions %>
        </nav>
      </div>
    </div>
  </div>
</div>

<!-- Add Question Modal -->
<div class="modal fade" id="addQuestionModal" tabindex="-1" role="dialog" aria-labelledby="addQuestionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addQuestionModalLabel">Thêm mới câu hỏi</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Form thêm mới câu hỏi -->
      <%= form_with url: admin_questions_path, method: :post, local: true, id: "addQuestionForm" do %>
        <div class="modal-body">
          <div class="form-group">
            <label for="content">Nội dung câu hỏi</label>
            <%= text_area_tag :content, nil, class: "form-control", rows: 3, placeholder: "Nhập nội dung câu hỏi", required: true %>
          </div>
          <div class="form-group">
            <label for="question_type">Loại câu hỏi</label>
            <%= select_tag :question_type,
                options_for_select([
                  ['Chọn loại câu hỏi', ''],
                  ['Multiple Choice', 'multiple_choice'],
                  ['True/False', 'true_false'],
                  ['Essay', 'essay'],
                  ['Matching', 'matching']
                ]),
                class: "form-control",
                required: true %>
          </div>
          <div class="form-group">
            <label for="correct_rate">Tỷ lệ trả lời đúng (%)</label>
            <%= number_field_tag :correct_rate, 0, class: "form-control", min: 0, max: 100 %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
          <button type="submit" class="btn btn-primary">Lưu câu hỏi</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js' %>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js' %>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.min.js' %>

<script>
  $(document).ready(function() {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>
</body>
</html>
