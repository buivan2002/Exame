<!-- Nội dung câu hỏi -->
<div class="form-group">
  <%= f.label :content, "Nội dung câu hỏi" %>
  <%= f.text_area :content, class: "form-control", rows: 3, placeholder: "Nhập nội dung câu hỏi", required: true %>
</div>

<!-- Loại câu hỏi -->
<div class="form-group">
  <%= f.label :question_type, "Loại câu hỏi" %>
  <%= f.select :question_type, options_for_select([
      ['Chọn loại câu hỏi', ''],
      ['Multiple Choice', 'multiple_choice'],
      ['True/False', 'true_false'],
      ['Essay', 'essay'],
      ['Matching', 'matching']
    ]), { prompt: "Chọn loại câu hỏi" }, { class: "form-control", required: true } %>
</div>

<!-- Danh mục -->
<div class="form-group">
  <%= f.label :category_id, "Danh mục" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Chọn danh mục", class: "form-control", required: true %>
</div>

<!-- Độ khó -->
<div class="form-group">
  <%= f.label :difficulty, "Độ khó" %>
  <%= f.select :difficulty, options_for_select([
      ['Chọn độ khó', ''],
      ['Dễ', 'easy'],
      ['Trung bình', 'medium'],
      ['Khó', 'hard']
    ]), { prompt: "Chọn độ khó" }, { class: "form-control" } %>
</div>

<!-- Trạng thái -->
<div class="form-group">
  <%= f.label :status, "Trạng thái" %>
  <%= f.select :status, options_for_select([
      ['Chọn trạng thái', ''],
      ['Active', 'active'],
      ['Inactive', 'inactive']
    ]), { prompt: "Chọn trạng thái" }, { class: "form-control" } %>
</div>

<!-- Giải thích -->
<div class="form-group">
  <%= f.label :explanation, "Giải thích câu hỏi" %>
  <%= f.text_area :explanation, class: "form-control", rows: 3, placeholder: "Nhập giải thích câu hỏi" %>
</div>

<!-- Hình ảnh cho câu hỏi -->
<div class="form-group">
  <%= f.label :image, "Hình ảnh cho câu hỏi" %>
  <%= f.file_field :image, class: "form-control-file" %>
</div>
