<div class="container mt-5">
  <div class="row">
    <!-- Thông tin người dùng -->
    <div class="col-md-4 text-center">
      <div class="card shadow-sm p-3">
        <img src="https://free.vector6.com/wp-content/uploads/2021/03/0000000691-hoc-tap-giao-duc-tre-em-hoc-bai-tai-hinh-png-173.png" class="rounded-circle img-fluid border border-3 border-primary" alt="User Avatar">
        <h3 class="mt-3 text-primary"><%= @user.name %></h3>
        <p class="text-muted"><i class="bi bi-envelope"></i> <%= @user.email %></p>
                <!-- Hiển thị số lượng Follow -->
        <div class="d-flex justify-content-center mt-3">
        <!-- Đang Follow -->
        <div class="me-3 text-center">
            <h5 class="mb-0">
            <a href="#" data-bs-toggle="modal" data-bs-target="#followingModal">
                <%= @following_count %>
                </a>

            </h5>
            <p class="text-muted">Đang Follow</p>
        </div>

        <!-- Người Theo Dõi -->
        <div class="text-center">
            <h5 class="mb-0">
            <a href="#" data-bs-toggle="modal" data-bs-target="#followersModal">
                <%= @followers_count %>
            </a>
            </h5>
            <p class="text-muted">Người Theo Dõi</p>
        </div>
        </div>
 <%= render 'modalfl' %>
          <p class="mb-0 fst-italic">Số điểm point bạn có <%= @points.total_point %></p>
          <p class="mb-0 fst-italic">Level <%= @points.level %></p>

        <blockquote class="blockquote">
          <p class="mb-0 fst-italic">"Success is not final, failure is not fatal: it is the courage to continue that counts."</p>
        </blockquote>
      </div>
<a href="<%= root_path %>" class="btn btn-secondary">Quay lại trang chủ</a>

    </div>

    <!-- Danh sách chức năng -->
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h5 class="mb-0"><i class="bi bi-list-task"></i> Chức năng</h5>
        </div>
        <div class="list-group list-group-flush">
            <a href="<%= profile_statistics_path %>" class="list-group-item list-group-item-action d-flex align-items-center">
            <i class="bi bi-journal-text me-2 text-info"></i>Thống kê từ trước tới nay
          </a>
          <!-- Lịch sử trả lời câu hỏi -->
          <a href="<%= history_path %>" class="list-group-item list-group-item-action d-flex align-items-center">
            <i class="bi bi-journal-text me-2 text-info"></i> Lịch sử trả lời câu hỏi
          </a>
          <!-- Bảng xếp hạng -->
          <a href="<%= rank_score_path %>" class="list-group-item list-group-item-action d-flex align-items-center">
            <i class="bi bi-bar-chart me-2 text-success"></i> Xem danh sách top 10 người trả lời đúng nhiều nhất
          </a>
        </div>
      </div>
    </div>
  </div>
</div>


