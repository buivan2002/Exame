<div class="categories-page">
  <div class="categories-header">
    <h1>Danh mục chủ đề</h1>
    <p>Lựa chọn danh mục theo từng chủ đề</p>
  </div>

  <div class="categories-grid">
    <% @categories.each do |category| %>
      <div class="category-card">
        <div class="category-icon">
          <i class="fas fa-book"></i>
        </div>
        <div class="category-content">
          <h3><%= link_to category.name, difficulty_users_category_path(category), class: "text-decoration-none text-primary" %></h3>
          <p class="category-description"><%= truncate(category.description, length: 100) %></p>
        </div>
        <div class="category-footer">
          <%= link_to "Xem chi tiết", root_path(category: category.name), class: "btn-view" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .categories-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .categories-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .categories-header h1 {
    font-size: 32px;
    color: #333;
    margin-bottom: 10px;
  }

  .categories-header p {
    color: #666;
    font-size: 16px;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
  }

  .category-card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .category-icon {
    background-color: #3f51b5;
    color: white;
    padding: 20px;
    text-align: center;
    font-size: 24px;
  }

  .category-content {
    padding: 20px;
    flex-grow: 1;
  }

  .category-title {
    color: #333;
    font-size: 18px;
    text-decoration: none;
    display: block;
    margin-bottom: 10px;
    transition: color 0.2s;
  }

  .category-title:hover {
    color: #3f51b5;
  }

  .category-description {
    color: #666;
    font-size: 14px;
    line-height: 1.5;
  }

  .category-footer {
    padding: 15px 20px;
    border-top: 1px solid #eee;
    text-align: right;
  }

  .btn-view {
    display: inline-block;
    padding: 8px 15px;
    background-color: #3f51b5;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    transition: background-color 0.2s;
  }

  .btn-view:hover {
    background-color: #303f9f;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .categories-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style>